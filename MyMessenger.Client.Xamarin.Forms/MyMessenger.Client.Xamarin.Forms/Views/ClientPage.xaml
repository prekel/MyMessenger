<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMessenger.Client.Xamarin.Forms.Views.ClientPage"
             xmlns:vm="clr-namespace:MyMessenger.Client.Xamarin.Forms.ViewModels"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:ClientViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="Login"/>
            <Entry x:Name="Password" IsPassword="True"/>
            <Button x:Name="Connect" Clicked="Connect_OnClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>